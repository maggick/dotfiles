# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
# Change $SCRIPT_DIR to the location of your scripts!
command=~/.config/i3blocks/$BLOCK_NAME/$BLOCK_NAME
separator_block_width=10
markup=none

[cmus]
label=
markup=pango
interval=10

[spotify]
label=
color=#81b71a
interval=5

[timew]
command=python3 ~/.config/i3blocks/timew/timew.py
interval=10
signal=10

# Volume indicator
[disk]
interval=240

# Network interface monitoring
[iface]
color=#00FF00
interval=240

[wifi]
INTERFACE=wlp3s0
label=
interval=240

[backlight]
label=☀
interval=once
signal=10

# CPU usage
#
# The script may be called with -w and -c switches to specify thresholds,
# see the script for details.
[cpu]
interval=60
label=

# Temperature
[temperature]
label=
interval=30

# Memory usage
[memory]
label=
interval=60

# Battery indicator
[battery-poly]
#label=BAT
#label=⚡
markup=pango
interval=60

#volume control
[volume]
label=♪
interval=once
signal=10
STEP=5%
align=center

#microphone control
[microphone]
interval=once
signal=10
align=center


#time paris/phoenix
[time]
interval=30
STRFTIME_FORMAT=%Y-%m-%d %H:%M
TZONES=Europe/Paris,America/Phoenix,America/New_York
TZ_LABELS=Paris,Phoenix,NYC

# mute dunst notification
[dunst]
markup=pango
interval=once
format=json

